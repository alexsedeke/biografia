@import './vars.postcss';

.sub-navigation {
    margin: 0 -20px 20px;
    padding: 3px 20px 0;
    height: 50px;
    box-shadow: inset 0 -1px 0 var(--shadow-color);

    &__link {
        display: inline-block;
        margin-right: 4px;
        padding: 15px 10px 15px 10px;
        color: var(--label-color);
        font-weight: 300;
        font-size: 16px;
        line-height: 19px;
    }
}
