@import './vars.postcss';

.sub-navigation {
    margin: 0 -20px 20px;
    padding: 3px 20px 0;
    height: 50px;
    box-shadow: inset 0 -1px 0 var(--shadow-color);

    &__link {
        position: relative;
        display: inline-block;
        margin: 0 4px;
        padding: 15px 10px 15px 10px;
        color: var(--label-color);
        font-weight: 300;
        font-size: 16px;
        line-height: 20px;

        &:first-child {
            margin: 0 4px 0 -10px;
        }

        &:last-child {
            margin: 0 0 0 4px;
        }

        &.active {
            color: var(--base-color);

            &:after {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 1px;
                background-color: var(--base-color);
                content: '';
            }
        }
    }
}
